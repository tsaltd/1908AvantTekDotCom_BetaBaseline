@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutRed";}

@model Workspace.ViewModels.vmHomeIndex;

<!-- img{
    max-width: 100%;
    height:auto;
    vertical-align: bottom;
} -->

<!--/////////// HEADER SECTION //////////-->

<section id="intro" style="border-style: solid;
                            border-color: #F1F1FF;
                            border-top-width: 7px;
                            border-left-width: 7px;
                            border-bottom-width: 15px;
                            border-right-width: 7px;">
    <div class="d-flex" style="
        padding-bottom: 10px;
        padding-top: 25px;">
            <div class="intro-well wow animated bounceIn">
                <div class="d-flex">
                    <div>
                        <h1>The AvantTek Solution</h1>
                    </div>
                </div>
            </div>
    </div>
</section>
<!-- LAUNCH VERSION COMMENT START -->
<!-- ////////// FEATURES SECTION ////////// -->
<section id="features">
    <div style="visibility: visible; animation-name: fadeIn;" class="wow fadeIn  animated">
                 <div class="d-flex justify-content-center">  
                     <h1 style="padding-bottom: 0px; color: black; font-size: 27px;">On the Frontiers of Technology</h1>
                </div>
    </div>
    <DIV CLASS="D-FLEX">
        <div class="d-flex justify-content-center">
                <img src="~/Red/img/mobileWordCloud.PNG" alt="Tools" class=img-fluid/>      
        </div>
        <div class="d-flex justify-content-center img-fluid">
            <img src="~/Red/img/mobileEther.png" alt="Ethereum" />
        </div>
        <div class="d-flex justify-content-center">    
                <img src="~/Red/img/mobileAzure.png" alt="Azure" class=img-fluid />   
        </div>   
    </DIV>
    
<!--//////////  SECTION ////////// -->
<section id="newsletter" ng-app="app-email" class="d-flex flex-column" style="margin-top:10px">
    <div class="wow animated fadeInDown d-flex flex-column justify-content-center" ng-controller="emailController as vm">
        <div class="d-flex flex-column justify-content-center">
            <h3>Today's solutions</h3>
            <h3>Cloud -- Blockchain -- ModernWeb</h3>>
         </div>
    </div>
    <div ID="emailtest" style="padding-top: 15px" class="ng-app d-flex flex-row justify-content-center">
                <form novalidate name="myForm" class="form-inline" ng-submit="vm.SendGridAlphaInterested(vm.email.text)">
                            <input type="email" name="input" class="input-sm ng-pristine ng-empty ng-valid-email ng-invalid ng-invalid-required ng-touched" ng-model="vm.email.text" required="" style="
                                height: 45px; width: 190px;">
                            <button ng-click='validateEmail()' type="submit" class="btn btn-primary">Send Me Updates</button>
                </form>
    </div> 
    <div id="emErr" ng-show="myForm.input.$invalid && myForm.input.$dirty" style="font-size: 20px">A valid email is required</div>
    <div class="d-flex flex-row justify-content-center">
         <button style="font-size:medium" type="button" class="btn btn-primary">Primary</button>
    </div>
</section>

<!--////////// FOOTER SECTION ////////// -->

<footer class="d-flex justify-content-center">
    <p>
        Copyright © 2015 Flati. Made with <i class="fa fa-heart footer-heart"></i> by Themeberry
    </p>
</footer>
<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script>
    $(function () {
        $(window).on("load resize", function () {
            $(".fill-screen").css("height", window.innerHeight);
        });
    });
</script>
