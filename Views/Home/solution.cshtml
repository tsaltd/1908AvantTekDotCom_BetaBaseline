@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutRed";}

@model Workspace.ViewModels.vmHomeIndex;
<style>
    img {
        max-width: 100%;
        height: auto;
        vertical-align: bottom;
    }
</style>



<!--/////////// HEADER SECTION //////////-->

<section id="intro" style="border-style: solid;
                            border-color: #F1F1FF;
                            border-top-width: 7px;
                            border-left-width: 7px;
                            border-bottom-width: 15px;
                            border-right-width: 7px;">
    <div class="d-flex" style="
        padding-bottom: 10px;
        padding-top: 25px;">
        @* <div class="intro-well wow animated bounceIn"> *@
        <div class="intro-well">
            <div class="d-flex">
                <div>
                    <h1 class="ml-5">The AvantTek Solution</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ////////// FEATURES SECTION ////////// -->
<section id="features" style="padding-top: 22px">
    <div>
        <picture class="d-flex flex-row justify-content-center">
            <source media="(min-width: 700px)" srcset="~/Red/img/WordCloud.png">
            <source media="(min-width: 200px)" srcset="~/Red/img/mobileWordCloud.PNG">
            <img src="~/Red/img/mobileWordCloud.PNG" alt="Tools" />
        </picture>
        <picture class="d-flex flex-row justify-content-center">
            <source media="(min-width: 700px)" srcset="~/Red/img/ether.PNG">
            <source media="(min-width: 200px)" srcset="~/Red/img/mobileEther.PNG">
            <img src="~/Red/img/mobileEther.PNG" alt="Ethereum" />
        </picture>

        <picture class="d-flex flex-row justify-content-center">
            <source media="(min-width: 700px)" srcset="~/Red/img/Azure.png">
            <source media="(min-width: 200px)" srcset="~/Red/img/mobileAzure.PNG">
             <img src="~/Red/img/mobileAzure.PNG" alt="Cloudy" style="padding-bottom: 22px;">>
        </picture>
       
    </div>
</section>

<!--//////////  SECTION ////////// -->
<section id="newsletter" ng-app="app-email" class="d-flex flex-column">
    <div class="d-flex flex-row justify-content-center" ng-controller="emailController as vm">
        @* <div style="visibility: visible; animation-name: fadeIn;" class="d-flex flex-column justify-content-center wow fadeIn  animated"> *@
        <p class="icntitle d-flex flex-row" style="color: white; padding-top: 40px; padding-bottom:60px; margin-bottom:5px; font-size: 38px">Solution Components</p>
    </div>
    <div class="d-flex px-5 flex-row justify-content-around my-3 flex-wrap">
        <div class="callOuts d-flex flex-column flex-fill p-4 mx-2 my-2 my-lg-1 text-center">
            <img src="~/Red/img/modweb.png" class="img-fluid mx-auto d-block">
            <h3>Modern Web</h3>
            @* <p>Get your climbing gmodWebear for the season.</p> *@
        </div>
        <div class="callOuts d-flex flex-column flex-fill p-4 mx-2 my-2 my-lg-1 text-center">
            <img src="~/Red/img/SmartContractDev.png" class="img-fluid mx-auto d-block">
            <h3>D-Apps</h3>
            @* <p>Run from your troubles with these shoes.</p> *@
        </div>
        <div class="callOuts d-flex flex-column flex-fill p-4 mx-2 my-2 my-lg-1 text-center">
            <img src="~/Red/img/img_Cloud.simple.png" class="img-fluid mx-auto d-block">
            <h3>Cloud</h3>
        </div>
    </div>

    <div class="wow animated fadeInDown d-flex flex-column justify" ng-controller="emailController as vm">
        <div class="d-flex flex-column justify-content-center">

            <p class="icntitle" style="padding-top: 25px;padding-bottom: 0;">Building Modern Digital Solutions </p>

             <p class="icntitle" style="padding-top: 12px;padding-bottom: 10px;">Stay Tuned for News, Views and How-To's</p>
        
        </div>
        <div ID="emailtest" style="padding-top: 0px" class="ng-app">

            <div class="d-flex justify-content-center">
                <div ID="emailtest" style="padding-top: 17px" class="ng-app">
                    <form novalidate name="myForm" class="d-flex flex-row justify-content-center form-inline" ng-submit="vm.SendGridAlphaInterested(vm.email.text)">
                        <input type="email" name="input" class="input-sm ng-pristine ng-empty ng-valid-email ng-invalid ng-invalid-required ng-touche-d" ng-model="vm.email.text" required="" style="
                            height: 45px; width: 190px;">
                        <button ng-click='validateEmail()' type="submit" class="btn btn-primary">Send Me Updates</button>
                    </form>
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <div id="emErr" ng-show="myForm.input.$invalid && myForm.input.$dirty" style="font-size: 20px">A valid email is required</div>
            </div>
        </div>
            <h3 class="d-flex flex-row justify-content-center">
                <a asp-controller="Home" asp-action="toc" asp-protocol="http" class="btn btn-primary" type="submit" STYLE="border-radius: 8px; border: 2px solid rgba(0, 70, 147, 0.75); COLOR: WHITE; margin-top: 50px;  BACKGROUND-COLOR: #787179;">Preview</a>
            </h3>
        </div>
    </div> 
</section>


<footer class="d-flex justify-content-center" style="padding-top: 25px">
    <p>
        AvantTek Solutions Inc.  New York, NY
    </p>
</footer>
<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script>
    $(function () {
        $(window).on("load resize", function () {
            $(".fill-screen").css("height", window.innerHeight);
        });
    });
</script>