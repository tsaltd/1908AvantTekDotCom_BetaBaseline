@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutRed";}

@model Workspace.ViewModels.vmHomeIndex;


<!--/////////// HEADER SECTION //////////-->

<section id="intro" style="border-style: solid;
                            border-color: #F1F1FF;
                            border-top-width: 7px;
                            border-left-width: 7px;
                            border-bottom-width: 15px;
                            border-right-width: 7px;">
    <div class="d-flex" style="
        padding-bottom: 10px;
        padding-top: 25px;">
            <div class="intro-well wow animated bounceIn">
                <div class="d-flex">
                    <div>
                        <h1 class="ml-5">The AvantTek Solution</h1>
                    </div>
                </div>
            </div>
    </div>
</section>
<!-- LAUNCH VERSION COMMENT START -->
<!-- ////////// FEATURES SECTION ////////// -->
<!-- LAUNCH VERSION COMMENT START -->
<!-- ////////// FEATURES SECTION ////////// -->
<!-- ////////// FEATURES SECTION ////////// -->
<section id="features" style="padding-top: 22px">
    <div>
        <picture class="d-flex flex-row justify-content-center">
            <source media="(min-width: 700px)" srcset="~/Red/img/WordCloud.png">
            <source media="(min-width: 490px)" srcset="~/Red/img/mobileWordCloud.PNG">
            <img src="~/Red/img/mobileWordCloud.PNG" alt="Tools"/>
        </picture>
        <picture class="d-flex flex-row justify-content-center">
            <source media="(min-width: 700px)" srcset="~/Red/img/ether.PNG">
            <source media="(min-width: 490px)" srcset="~/Red/img/mobileEther.PNG">
            <img src="~/Red/img/mobileEther.PNG" alt="Ethereum"/>
        </picture>

        <picture class="d-flex flex-row justify-content-center">
            <source media="(min-width: 700px)" srcset="~/Red/img/Azure.PNG">
            <source media="(min-width: 490px)" srcset="~/Red/img/mobileAzure.PNG">
            <img src="~/Red/img/mobileAzure.PNG" alt="Tools" style="padding-bottom: 22px;">
        </picture>
    </div>
</section>

<!--//////////  SECTION ////////// -->
<section id="newsletter" ng-app="app-email" class="d-flex flex-column">
    <div class="wow animated fadeInDown d-flex flex-column justify" ng-controller="emailController as vm">
        <div class="d-flex flex-row justify-content-center">
            @* <div style="visibility: visible; animation-name: fadeIn;" class="d-flex flex-column justify-content-center wow fadeIn  animated"> *@
             <p  class="icntitle d-flex flex-row" style="color: white; padding-top: 40px; padding-bottom:60px; margin-bottom:5px; font-size: 38px">Solution Components</p>
        </div>                                                                                                                                         
        <div  class="icntitle d-flex flex-row justify-content-center" style="color: black; font-size:28px;">
            <p style="padding-right: 70px">Cloud</p>
            <p style="padding-left: 35px">D-Apps</p>
        </div>
        <div  class="icntitle d-flex flex-row justify-content-center" style="color: white; font-size:24px;">
            <p>Modern Web Tools</p>
        </div>
        <div class="d-flex flex-column justify-content-center">
            <p class="icntitle" style="padding-top: 25px;padding-bottom: 10px;"> Overviews &amp; DrillDowns</p>
            <p  class="icntitle">Are On The Way</p>
        </div>
    <div class="d-flex justify-content-center">
        <div ID="emailtest" style="padding-top: 75px" class="ng-app">
                <form novalidate name="myForm" class="form-inline" ng-submit="vm.SendGridAlphaInterested(vm.email.text)">
                            <input type="email" name="input" class="input-sm ng-pristine ng-empty ng-valid-email ng-invalid ng-invalid-required ng-touched" ng-model="vm.email.text" required="" style="
                                height: 45px; width: 190px;">
                            <button ng-click='validateEmail()' type="submit" class="btn btn-primary">Send Me Updates</button>
                </form>
        </div>
    </div>
    <div class="d-flex justify-content-center">
            <div id="emErr" ng-show="myForm.input.$invalid && myForm.input.$dirty" style="font-size: 20px">A valid email is required</div>
    </div>
    </div> 
</section>

<!--////////// FOOTER SECTION ////////// -->

<footer class="d-flex justify-content-center">
    <p>
        Copyright © 2015 Flati. Made with <i class="fa fa-heart footer-heart"></i> by Themeberry
    </p>
</footer>
<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script>
    $(function () {
        $(window).on("load resize", function () {
            $(".fill-screen").css("height", window.innerHeight);
        });
    });
</script>